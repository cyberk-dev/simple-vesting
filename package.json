{
  "name": "awe-contract",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "deploy:testnet": "dotenv -e .env.testnet -- hardhat deploy --network bscTestnet --show-stack-traces",
    "add-usd-tokens:testnet": "dotenv -e .env.testnet -- hardhat add-usd-tokens --network bscTestnet --show-stack-traces",
    "set-config:testnet": "dotenv -e .env.testnet -- hardhat set-config --network bscTestnet --show-stack-traces",
    "start:testnet": "dotenv -e .env.testnet -- hardhat start --network bscTestnet --show-stack-traces",
    "verify:testnet": "dotenv -e .env.testnet -- hardhat ignition verify chain-97 --network bscTestnet --show-stack-traces",
    "deploy-all:testnet": "dotenv -e .env.testnet -- hardhat deploy-all --network bscTestnet --show-stack-traces",
    "MAINNET": "-------",
    "deploy-all:mainnet": "dotenv -e .env.mainnet -- hardhat deploy-all --network bscMainnet --show-stack-traces",
    "start:mainnet": "dotenv -e .env.mainnet -- hardhat start --network bscMainnet --show-stack-traces",
    "set-config:mainnet": "dotenv -e .env.mainnet -- hardhat set-config --network bscMainnet --show-stack-traces",
    "verify:mainnet": "dotenv -e .env.mainnet -- hardhat ignition verify chain-56 --network bscMainnet --show-stack-traces",
    "format": "prettier --write \"**/*.{js,ts,sol,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,sol,json,md}\"",
    "format:fix": "prettier --write \"**/*.{js,ts,sol,json,md}\" --ignore-unknown"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ignition": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^3.0.0",
    "@nomicfoundation/hardhat-toolbox-viem": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^3.0.0",
    "@nomicfoundation/hardhat-viem": "^3.0.0",
    "@nomicfoundation/hardhat-viem-assertions": "^3.0.0",
    "@openzeppelin/hardhat-upgrades": "^3.9.1",
    "@pancakeswap/v3-core": "^1.0.2",
    "@pancakeswap/v3-periphery": "^1.0.2",
    "@types/luxon": "^3.7.1",
    "@types/node": "^22.17.2",
    "dotenv-cli": "^10.0.0",
    "forge-std": "github:foundry-rs/forge-std#v1.9.4",
    "hardhat": "^3.0.0",
    "luxon": "^3.7.1",
    "prettier": "^3.6.2",
    "prettier-plugin-solidity": "^2.1.0",
    "solhint-plugin-prettier": "^0.1.0",
    "typescript": "~5.8.0",
    "viem": "^2.33.3"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "@openzeppelin/contracts-upgradeable": "^5.4.0"
  }
}
